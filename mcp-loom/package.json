    "watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "strip-ansi": "^7.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.18.10",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
