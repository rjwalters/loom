{
  "name": "@loom/mcp",
  "version": "0.3.0",
  "description": "Unified MCP server for Loom - combines logs, UI, and terminal tools",
  "type": "module",
  "bin": {
    "mcp-loom": "./dist/index.js"
  },
  "scripts": {
