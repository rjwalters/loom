{
  "name": "loom",
  "version": "0.1.0",
  "description": "A multi-terminal desktop application for macOS that orchestrates AI-powered development workers using git worktrees and GitHub as the coordination layer.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "daemon:dev": "cd loom-daemon && RUST_LOG=info cargo run",
    "daemon:build": "cargo build --package loom-daemon --release",
    "daemon:check": "cargo check --package loom-daemon",
    "check": "cargo check --workspace",
    "check:all": "npm run check && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjwalters/loom.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rjwalters/loom/issues"
  },
  "homepage": "https://github.com/rjwalters/loom#readme",
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.6.3",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^5.4.20"
  }
}
