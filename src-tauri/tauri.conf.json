{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Loom",
  "version": "0.1.0",
  "identifier": "com.github.rjwalters.loom",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "externalBin": ["../target/release/loom-daemon"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": ["../defaults"],
    "shortDescription": "",
    "targets": "all",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: tauri:; font-src 'self'; connect-src 'self' tauri:"
    },
    "windows": [
      {
        "title": "Loom",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "plugins": {
    "cli": {
      "description": "Loom - AI-powered development orchestration",
      "args": [
        {
          "name": "workspace",
          "short": "w",
          "takesValue": true,
          "description": "Path to git repository workspace"
        }
      ]
    }
  }
}
