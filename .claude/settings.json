{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'ROOT=$(cd \"$(git rev-parse --git-common-dir 2>/dev/null)/..\" 2>/dev/null && pwd) && [ -x \"$ROOT/.loom/hooks/guard-destructive.sh\" ] && exec \"$ROOT/.loom/hooks/guard-destructive.sh\" || exit 0'"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'ROOT=$(cd \"$(git rev-parse --git-common-dir 2>/dev/null)/..\" 2>/dev/null && pwd) && [ -x \"$ROOT/.loom/hooks/guard-worktree-paths.sh\" ] && exec \"$ROOT/.loom/hooks/guard-worktree-paths.sh\" || exit 0'"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(cargo:*)",
      "Bash(node:*)",
      "Bash(./scripts/**:*)",
      "Bash(./.loom/scripts/**:*)",
      "Bash(tmux:*)",
      "Bash(lsof:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(touch:*)",
      "Bash(echo:*)",
      "Bash(chmod:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(xargs:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(wc:*)",
      "Bash(tee:*)",
      "Bash(tr:*)",
      "Bash(diff:*)",
      "Bash(patch:*)",
      "Bash(which:*)",
      "Bash(env:*)",
      "Bash(basename:*)",
      "Bash(dirname:*)",
      "Bash(date:*)",
      "Bash(sleep:*)",
      "Bash(test:*)",
      "Bash([:*)",
      "Bash(jq:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(tar:*)",
      "Bash(gzip:*)",
      "Bash(gunzip:*)",
      "Bash(zip:*)",
      "Bash(unzip:*)",
      "Bash(convert:*)",
      "Bash(magick:*)",
      "Bash(iconutil:*)",
      "Bash(jot:*)",
      "Bash(shuf:*)",
      "WebSearch",
      "Read(/tmp/**)",
      "Write(/tmp/**)"
    ]
  }
}
