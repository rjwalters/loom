{
  "mcpServers": {
    "loom-logs": {
      "command": "node",
      "args": ["${workspaceFolder}/mcp-loom-logs/dist/index.js"]
    },
    "loom-terminals": {
      "command": "node",
      "args": ["${workspaceFolder}/mcp-loom-terminals/dist/index.js"]
    },
    "loom-ui": {
      "command": "node",
      "args": ["${workspaceFolder}/mcp-loom-ui/dist/index.js"],
      "env": {
        "LOOM_WORKSPACE": "${workspaceFolder}"
      }
    }
  }
}
